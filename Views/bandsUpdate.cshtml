<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Update Bands</title>
  </head>
  <body>


    <h1>Bands:</h1>
    <hr />
    <h2>Edit Band: @Model.GetName()</h2>
      <form action="/bands/edit/@Model.GetId()" method="post">
        <input type="hidden" name="_method" value="PATCH">
        <input name="band-id" type="hidden" value="@Model.GetId()">
        <label for="band-name">new band name</label>
        <input id="band-name" name="band-name" type="text">
        <button type="submit">Submit</button>
      </form>
    <h4><a href="/">Return home</a></h4>


  </body>
</html>
