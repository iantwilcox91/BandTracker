<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>HomePage</title>
    <link rel="stylesheet" href="../content/Styles.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">

  </head>
  <body class="bodyHome">
    <div class="row">
      <div class="col-xs-6">
      <h1 class="textblue">List Of Bands</h1>
      @foreach (var band in Model["bandList"])
      {
        <h2><a href="/bands/@band.GetId()">@band.GetName()</a> | <a href="/bands/edit/@band.GetId()">Edit</a> | <a href="/bands/delete/@band.GetId()">Delete</a></h2>
      }
      <p>
        <h4 class="textblue">Add a band</h4>
        <form action="/add_band" method="post">
          <input type="string" name="bandName" placeholder="Enter a band name"><br>
          <button type="submit">submit</button>
        </form>
      </p>
    </div>

    <div class="col-xs-6">

      <h1 class="textblue">List Of Venues</h1>
      @foreach (var venue in Model["venueList"])
      {
        <h2><a href="/venues/@venue.GetId()">@venue.GetName()</a> | <a href="/venues/edit/@venue.GetId()">Edit</a> | <a href="/venues/delete/@venue.GetId()">Delete</a></h2>
      }

      <p>
        <h4 class="textblue">Add a venue</h4>
        <form action="/add_venue" method="post">
          <input type="string" name="venueName" placeholder="Enter a venue name"><br>
          <button type="submit">submit</button>
        </form>
      </p>
    </div>
  </div>

<br><br><br>
    <a href="/">Return to the Homepage</a>
  </body>
</html>
